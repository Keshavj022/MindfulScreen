# MindfulScreen Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# REQUIRED - Security Keys
# ==========================================
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-characters-min

# ==========================================
# DATABASE
# ==========================================
# For local development (SQLite):
DATABASE_URL=sqlite:///data/mindfulscreen.db

# For production (PostgreSQL on Render):
# DATABASE_URL=postgresql://user:password@host:port/database

# ==========================================
# OPENAI API (Required for screen analysis)
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==========================================
# EMAIL/SMTP CONFIGURATION
# ==========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=MindfulScreen <your-email@gmail.com>

# ==========================================
# OTP SETTINGS
# ==========================================
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# ==========================================
# ENVIRONMENT
# ==========================================
# For development:
FLASK_DEBUG=True
FLASK_ENV=development

# For production:
# FLASK_DEBUG=False
# FLASK_ENV=production

# ==========================================
# DEMO DATA (Optional)
# ==========================================
# Set to true to auto-create demo user on startup
INIT_DEMO_DATA=false
